{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="form-container">
        <h2>Réinitialiser votre mot de passe</h2>
        <pxz>Entrer votre adresse mail et nous allons vous envoyer un lien pour réinitialiser votre mot de passe.</pxz>
        {{ form_start(requestForm) }}
            <div class="form-group">
                <label for="emainputEmailil">Email :</label>
                {{ form_widget(requestForm.email) }}
            </div>
            <button type="submit" class="btn-submit">Valider</button>
        {{ form_end(requestForm) }}
</div>

{% endblock %}
